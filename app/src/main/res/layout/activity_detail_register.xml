<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".authentication.register.RegisterDetailActivity">

    <com.synrgy.common.reusable.KaboorAppbar
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:kaboorAppbar_title="@string/title_fill_your_detail_account"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dimen_12dp"
        android:clipToPadding="false"
        android:paddingHorizontal="@dimen/dimen_16dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.synrgy.common.reusable.KaboorEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                app:kaboorEditText_label="@string/label_phone_number"
                app:kaboorEditText_hint="@string/hint_62"
                app:kaboorEditText_type="phone"/>

            <com.synrgy.common.reusable.KaboorEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:kaboorEditText_label="@string/label_email"
                app:kaboorEditText_enable="false"/>

            <com.synrgy.common.reusable.KaboorEditText
                android:id="@+id/et_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:kaboorEditText_label="@string/label_full_name"
                app:kaboorEditText_hint="@string/hint_full_name"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_rule_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:text="@string/message_rule_register_full_name"
                style="@style/KaboorTextView.Title1"
                android:textColor="@color/neutral6"/>

            <com.synrgy.common.reusable.KaboorEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:kaboorEditText_label="@string/label_password"
                app:kaboorEditText_hint="@string/kata_sandi"
                app:kaboorEditText_type="password"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_rule_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:text="@string/message_rule_new_password"
                style="@style/KaboorTextView.Title1"
                android:textColor="@color/neutral6"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_create_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_42dp"
                style="@style/KaboorButton.Gradient"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/buat_akun"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_terms_condition"
                style="@style/KaboorTextView.Title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_60dp"
                android:text="@string/message_terms_condition"
                android:textAlignment="center"
                android:textColor="@color/neutral6" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>