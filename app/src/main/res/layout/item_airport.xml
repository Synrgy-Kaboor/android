<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/ripple_rectangle_white"
    android:paddingTop="@dimen/dimen_10dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/KaboorTextView.Title3"
        android:textColor="@color/neutral7"
        tools:text="SUB"
        android:layout_marginHorizontal="@dimen/dimen_16dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/KaboorTextView.Body2"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:textColor="@color/neutral6"
        tools:text="Juanda Internation Airport"
        android:maxLines="1"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_marginHorizontal="@dimen/dimen_16dp"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        app:dividerColor="@color/neutral5"
        android:layout_marginTop="@dimen/dimen_10dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>