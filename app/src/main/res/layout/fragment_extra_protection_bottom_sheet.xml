<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".booking.dialog.ExtraProtectionBottomSheetFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            tools:src="@drawable/ic_shield_cross" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title"
            style="@style/KaboorTextView.Title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            tools:text="@string/title_travel_insurance" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:background="@drawable/bg_tab_layout_header">

        <TableRow>

            <com.google.android.material.textview.MaterialTextView
                style="@style/KaboorTextView.Title2"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/title_dependents"
                android:textColor="@color/neutral1" />

            <View
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="match_parent"
                android:background="@color/neutral5" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/KaboorTextView.Title2"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/title_compensation"
                android:textColor="@color/neutral1" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="-1dp">

        <TableRow android:background="@drawable/bg_tab_layout_middle">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_key_1"
                style="@style/KaboorTextView.Body1.TabLayoutRow"
                tools:text="Santunan sebanyak satu kali jika Anda meninggal dunia atau cacat tetap akibat kecelakaan." />

            <View
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="match_parent"
                android:background="@color/neutral5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_value_1"
                style="@style/KaboorTextView.Body1.TabLayoutRow"
                tools:text="Hingga Rp 150.000.000" />
        </TableRow>

        <TableRow
            android:id="@+id/tab_2"
            android:layout_marginTop="-1dp"
            android:background="@drawable/bg_tab_layout_middle">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_key_2"
                style="@style/KaboorTextView.Body1.TabLayoutRow"
                tools:text="Santunan sebanyak satu kali jika Anda meninggal dunia atau cacat tetap akibat kecelakaan." />

            <View
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="match_parent"
                android:background="@color/neutral5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_value_2"
                style="@style/KaboorTextView.Body1.TabLayoutRow"
                tools:text="Hingga Rp 150.000.000" />
        </TableRow>

        <TableRow
            android:id="@+id/tab_3"
            android:layout_marginTop="-1dp"
            android:background="@drawable/bg_tab_layout_middle">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_key_3"
                style="@style/KaboorTextView.Body1.TabLayoutRow"
                tools:text="Santunan sebanyak satu kali jika Anda meninggal dunia atau cacat tetap akibat kecelakaan." />

            <View
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="match_parent"
                android:background="@color/neutral5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_value_3"
                style="@style/KaboorTextView.Body1.TabLayoutRow"
                tools:text="Hingga Rp 150.000.000" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="@dimen/dimen_42dp">

        <TableRow android:background="@drawable/bg_tab_layout_bottom">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_key_4"
                style="@style/KaboorTextView.Body1.TabLayoutRow"
                tools:text="Santunan sebanyak satu kali jika Anda meninggal dunia atau cacat tetap akibat kecelakaan." />

            <View
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="match_parent"
                android:background="@color/neutral5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_value_4"
                style="@style/KaboorTextView.Body1.TabLayoutRow"
                tools:text="Hingga Rp 150.000.000" />
        </TableRow>
    </TableLayout>
</androidx.appcompat.widget.LinearLayoutCompat>