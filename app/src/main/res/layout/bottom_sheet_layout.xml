<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <androidx.appcompat.widget.LinearLayoutCompat
       android:layout_marginTop="31dp"
       android:layout_width="match_parent"
       android:layout_height="320dp"
       android:paddingHorizontal="@dimen/dimen_17dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:orientation="vertical"
       android:background="@drawable/bg_rectangle_stroke_white">


       <com.google.android.material.textview.MaterialTextView
           android:id="@+id/tv_text"
           style="@style/KaboorTextView.Title1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:text="@string/email_ini"
           android:textSize="24sp"
           android:gravity="center"
           />

       <com.google.android.material.textview.MaterialTextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           style="@style/KaboorTextView.Title2"
           android:textSize="11sp"
           android:textColor="@color/neutral6"
           android:text="@string/untuk_login"
           android:layout_marginTop="8dp"/>

       <com.google.android.material.button.MaterialButton
           android:id="@+id/bt_nanti"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:text="@string/nanti_saja"
            android:textStyle="bold"
           style="@style/KaboorButton.Outline"
           android:textColor="@color/primaryBrightBlue"
           android:layout_marginTop="41dp"
           />

       <com.google.android.material.button.MaterialButton
           style="@style/KaboorButton.Gradient"
           android:id="@+id/bt_login"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:text="@string/login"
           android:textColor="@color/white"
           android:layout_marginTop="14dp"
           />


   </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>