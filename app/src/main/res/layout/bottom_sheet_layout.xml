<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <LinearLayout
       android:layout_marginTop="31dp"
       android:layout_width="match_parent"
       android:layout_height="320dp"
       android:layout_margin="@dimen/dimen_15dp"
       android:padding="@dimen/dimen_17dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:orientation="vertical"
       android:background="@drawable/bg_rectangle_stroke_white">


       <com.google.android.material.textview.MaterialTextView
           android:id="@+id/tv_text"
           style="@style/KaboorTextView.Title1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:text="Email ini terdaftar untuk Log In
dengan Google"
           android:textSize="24sp"
           android:gravity="center"
           />

       <com.google.android.material.textview.MaterialTextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           style="@style/KaboorTextView.Title2"
           android:textSize="11sp"
           android:textColor="@color/neutral6"
           android:text="Untuk log in menggunakan email ini, silahkan pilih metode log in dengan Google, ya."
           android:layout_marginTop="8dp"/>

       <com.google.android.material.button.MaterialButton
           android:id="@+id/bt_nanti"
           android:layout_width="328dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:text="Nanti Saja"
            android:textStyle="bold"
           style="@style/KaboorButton.Outline"
           android:textColor="@color/primaryBrightBlue"
           android:layout_marginTop="41dp"
           />

       <com.google.android.material.button.MaterialButton
           style="@style/KaboorButton.Gradient"
           android:id="@+id/bt_login"
           android:layout_width="328dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:text="Login"
           android:textColor="@color/white"
           android:layout_marginTop="8dp"
           />


   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>