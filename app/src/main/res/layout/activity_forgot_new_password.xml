<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".authentication.forgot.ForgotNewPasswordActivity">

    <com.synrgy.common.reusable.KaboorAppbar
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:kaboorAppbar_title="@string/label_change_password"/>

    <com.synrgy.common.reusable.KaboorEditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:kaboorEditText_hint="@string/kata_sandi"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:kaboorEditText_label="@string/label_input_new_password"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:kaboorEditText_type="password"/>

    <com.synrgy.common.reusable.KaboorEditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:kaboorEditText_hint="@string/kata_sandi"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:kaboorEditText_label="@string/label_confirm_input_new_password"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:kaboorEditText_type="password"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:text="@string/message_rule_new_password"
        style="@style/KaboorTextView.Title1"
        android:textColor="@color/neutral6"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42dp"
        style="@style/KaboorButton.Gradient"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/label_save"/>
</androidx.appcompat.widget.LinearLayoutCompat>