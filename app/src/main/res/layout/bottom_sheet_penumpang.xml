<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white">

        <!-- Tambahkan ikon panah kembali -->
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:layout_gravity="start"
            android:paddingStart="16dp" />

        <!-- Tambahkan teks detail di tengah -->
        <com.google.android.material.textview.MaterialTextView
            style="@style/KaboorTextView.SubHeading2"
            android:id="@+id/tvDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Penumpang"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="center" />
    </androidx.appcompat.widget.Toolbar>


    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:background="#000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/horizontalLine"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_15dp">


    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/horizontalLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/dimen_15dp"
        android:padding="@dimen/dimen_17dp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            style="@style/KaboorTextView.Title2"
            android:textSize="14sp"
            android:id="@+id/inpo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info Penumpang"
            android:layout_marginTop="14dp"/>

        <EditText
            android:id="@+id/et_nama"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_form"
            android:layout_marginTop="16dp"
            android:hint="Nama Lengkap"
            android:paddingLeft="16dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Sesuai dengan KTP"
            style="@style/KaboorTextView.Body1"
            android:textColor="@color/neutral6"/>

        <RadioGroup
            android:id="@+id/radioGroupGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonmr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr" />

            <RadioButton
                android:id="@+id/radioButtonmrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mrs"
                android:layout_marginStart="74dp" />

            <RadioButton
                android:id="@+id/radioButtonmiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="miss"
                android:layout_marginStart="74dp" />

        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            style="@style/KaboorButton.Gradient"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Simpan"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>