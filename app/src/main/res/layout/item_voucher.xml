<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dimen_8dp"
    app:cardBackgroundColor="@color/neutral1"
    app:cardCornerRadius="@dimen/dimen_8dp"
    app:cardElevation="@dimen/dimen_0dp"
    app:strokeColor="@color/neutral5"
    app:strokeWidth="@dimen/dimen_1_5dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary01"
            android:paddingHorizontal="@dimen/dimen_12dp"
            android:paddingVertical="@dimen/dimen_10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_discount"
                app:tint="@color/color_white_disable" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_voucher_type"
                style="@style/KaboorTextView.Title2"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_weight="1"
                android:textColor="@color/color_white_disable"
                tools:text="Voucher Promo" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerColor="@color/neutral5" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_save"
            style="@style/KaboorTextView.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/bg_rounded_success"
            android:backgroundTint="@color/color_success_disable"
            android:padding="@dimen/dimen_3dp"
            android:textColor="@color/neutral1"
            tools:text="Hemat IDR 26.000" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title"
            style="@style/KaboorTextView.Title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:textColor="@color/color_black_disable"
            tools:text="Discount Hingga Rp 100.000 Buat Keliling Indonesia" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_4dp">

            <com.google.android.material.textview.MaterialTextView
                style="@style/KaboorTextView.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_4dp"
                android:text="@string/label_code"
                android:textColor="@color/neutral6" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_code"
                style="@style/KaboorTextView.Title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black_disable"
                tools:text="TEMANKABOOR" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_description"
            style="@style/KaboorTextView.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:textColor="@color/color_gray_disable"
            tools:text="Berlaku untuk semua metode pembayaran" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/KaboorTextView.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:text="@string/label_snk"
            android:textColor="@color/primaryBlue" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_4dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@drawable/bg_line_dash" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_end_date"
            style="@style/KaboorTextView.Title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginVertical="@dimen/dimen_8dp"
            android:textColor="@color/color_danger_disable"
            tools:text="Promo Berakhir dalam 15 jam" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.google.android.material.card.MaterialCardView>