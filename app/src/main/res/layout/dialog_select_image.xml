<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rectangle_stroke_white"
    android:padding="@dimen/dimen_10dp"
    android:layout_margin="@dimen/dimen_10dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView"
        style="@style/KaboorTextView.Title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/label_change_image_profile"
        android:layout_alignParentTop="true"/>

    <Space
        android:id="@+id/space"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_below="@id/materialTextView"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_camera"
        android:layout_width="@dimen/dimen_52dp"
        android:layout_height="@dimen/dimen_52dp"
        android:background="@drawable/ripple_oval_white"
        android:padding="@dimen/dimen_4dp"
        app:tint="@color/primaryDarkBlue"
        android:layout_alignTop="@id/space"
        android:layout_toStartOf="@id/space"
        android:layout_below="@id/materialTextView"
        app:srcCompat="@drawable/ic_camera_broken"
        tools:layout_editor_absoluteX="10dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_galley"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:background="@drawable/ripple_oval_white"
        android:padding="@dimen/dimen_4dp"
        app:tint="@color/primaryDarkBlue"
        android:layout_alignTop="@id/space"
        android:layout_toEndOf="@id/space"
        android:layout_below="@id/materialTextView"
        android:layout_marginTop="@dimen/dimen_1dp"
        app:srcCompat="@drawable/ic_gallery_broken" />
</RelativeLayout>