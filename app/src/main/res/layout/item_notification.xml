<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/KaboorCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_4dp"
    app:cardElevation="@dimen/dimen_0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_14dp"
        android:layout_marginVertical="@dimen/dimen_10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:srcCompat="@drawable/ic_notification_payment" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title"
            style="@style/KaboorTextView.Title2"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_icon"
            android:layout_alignBottom="@id/img_icon"
            android:layout_marginHorizontal="@dimen/dimen_8dp"
            android:layout_toStartOf="@id/tv_date"
            android:layout_toEndOf="@id/img_icon"
            android:gravity="center_vertical"
            tools:text="Pembayaran Berhasil" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_date"
            style="@style/KaboorTextView.Title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_icon"
            android:layout_alignBottom="@id/img_icon"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:textColor="@color/neutral6"
            tools:text="24 Des" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_description"
            style="@style/KaboorTextView.Body1"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_alignStart="@id/tv_title"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:textColor="@color/neutral6"
            tools:text="Tiket pesawat Lion Air Anda sudah dikonfirmasi untuk penerbangan ke Jakarta (CGK) pada tanggal 20 Des2024. Siapkan perjalanan Anda dengan semangat! ðŸŒŸ" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>