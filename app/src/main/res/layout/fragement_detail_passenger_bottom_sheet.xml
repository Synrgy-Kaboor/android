<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_message_top"
        style="@style/KaboorTextView.Title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:text="@string/message_detail_passenger"
        android:textColor="@color/neutral6" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_passenger_info"
        style="@style/KaboorTextView.SubHeading2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:text="@string/label_passenger_info" />

    <com.synrgy.common.reusable.KaboorEditText
        android:id="@+id/et_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:kaboorEditText_label="@string/label_full_name" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/KaboorTextView.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:text="@string/message_ktp"
        android:textColor="@color/neutral6" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_mr"
            android:button="@drawable/selector_radio_button"
            android:paddingHorizontal="@dimen/dimen_8dp"
            android:minHeight="@dimen/dimen_0dp"
            android:maxHeight="@dimen/dimen_0dp"/>

        <View
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="1"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_mrs"
            android:button="@drawable/selector_radio_button"
            android:paddingHorizontal="@dimen/dimen_8dp"
            android:minHeight="@dimen/dimen_0dp"
            android:maxHeight="@dimen/dimen_0dp"/>

        <View
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="1"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_miss"
            android:button="@drawable/selector_radio_button"
            android:paddingHorizontal="@dimen/dimen_8dp"
            android:minHeight="@dimen/dimen_0dp"
            android:maxHeight="@dimen/dimen_0dp"/>
    </RadioGroup>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp">

        <com.synrgy.common.reusable.KaboorEditText
            android:id="@+id/et_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:kaboorEditText_label="@string/label_phone_number"
            app:kaboorEditText_end_icon="@drawable/ic_book"/>

        <com.synrgy.common.reusable.KaboorEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:kaboorEditText_label="@string/label_email"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:text="@string/label_info_passenger_detail"
            style="@style/KaboorTextView.Body1"
            android:textColor="@color/neutral6"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>