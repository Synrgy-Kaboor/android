<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/rounded_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white">

        <!-- Tambahkan ikon panah kembali -->
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:layout_gravity="start"
            android:paddingStart="16dp" />

        <!-- Tambahkan teks detail di tengah -->
        <com.google.android.material.textview.MaterialTextView
            style="@style/KaboorTextView.Title2"
            android:id="@+id/tvDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_pemesan"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="center" />
    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:background="#000000" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/horizontalLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingHorizontal="@dimen/dimen_17dp"
        >

        <com.google.android.material.textview.MaterialTextView
            style="@style/KaboorTextView.Title2"
            android:textColor="@color/neutral6"
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/data_ini"/>

        <EditText
            android:id="@+id/et_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_form"
            app:layout_constraintTop_toBottomOf="@id/data"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            android:hint="@string/nama_lengkap"
            android:paddingLeft="16dp"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/KaboorTextView.Body1"
            android:textColor="@color/neutral6"
            android:id="@+id/ktp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/sesuai_dengan_ktp"/>

        <RadioGroup
            android:id="@+id/radioGroupGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonmr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mr" />

            <RadioButton
                android:id="@+id/radioButtonmrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mrs"
                android:layout_marginStart="74dp" />

            <RadioButton
                android:id="@+id/radioButtonmiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/miss"
                android:layout_marginStart="74dp" />

        </RadioGroup>

        <EditText
            android:id="@+id/et_nomor"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/radioGroupGender"
            app:layout_constraintLeft_toLeftOf="@id/radioGroupGender"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_form"
            android:hint="@string/no_telepon"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:drawableRight="@drawable/ic_eye"
            android:paddingRight="16dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_nomor"
            style="@style/KaboorTextView.Body1"
            android:textColor="@color/neutral6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/nomor_telepon"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_form"
            android:hint="@string/alamat_email"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_ticket"
            style="@style/KaboorTextView.Body1"
            android:textColor="@color/neutral6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/e_ticket_akan_dikirimkan_ke_alamat_email_ini"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_simpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_ticket"
            app:layout_constraintLeft_toLeftOf="@id/tv_ticket"
            style="@style/KaboorButton.Gradient"
            android:text="@string/simpan"
            android:layout_marginTop="30dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>