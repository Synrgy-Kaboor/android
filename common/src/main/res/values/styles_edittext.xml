<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="KaboorTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/neutral4</item>
        <item name="hintTextColor">@color/tintBlack</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textSize">14sp</item>
        <item name="startIconTint">@color/tintBlack</item>
        <item name="android:textColorHint">@color/tintBlack</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="KaboorEdittext" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/neutral9</item>
    </style>
</resources>