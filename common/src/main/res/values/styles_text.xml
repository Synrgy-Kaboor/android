<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KaboorTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/neutral9</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="KaboorTextView.Heading1">
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="KaboorTextView.Heading2">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="KaboorTextView.SubHeading1">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/text_size_10sp</item>
    </style>

    <style name="KaboorTextView.SubHeading2">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>
    
    <style name="KaboorTextView.Title1">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/text_size_10sp</item>
    </style>

    <style name="KaboorTextView.Title2">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="KaboorTextView.Title3">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="KaboorTextView.Title4">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
    </style>

    <style name="KaboorTextView.Body0">
        <item name="android:textSize">@dimen/text_size_8sp</item>
    </style>

    <style name="KaboorTextView.Body1">
        <item name="android:textSize">@dimen/text_size_10sp</item>
    </style>

    <style name="KaboorTextView.Body2">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="KaboorTextView.Body1.TabLayoutRow">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/dimen_10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>